<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kuku.stakeholder.pagetwo"
    tools:showIn="@layout/activity_pagetwo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Announcement Title"
                android:padding="16dp"
                android:id="@+id/announcementName"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Agenda"
                android:id="@+id/announcementAgenda"
                android:padding="16dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organiser"
                android:id="@+id/announcementOrganiser"
                android:padding="16dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="announcementVenue"
                android:padding="16dp"
                android:id="@+id/Venue"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:hint="Date"
                    android:padding="16dp"
                    android:id="@+id/announcementDate"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:hint="Time"
                    android:layout_toRightOf="@id/date"
                    android:padding="16dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/announcementTime"/>


            </RelativeLayout>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:hint="Announcement Description"
                android:id="@+id/announcementDescription"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Link"
                android:padding="16dp"
                android:inputType="textUri"
                android:id="@+id/announcementLink"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:id="@+id/submit"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
